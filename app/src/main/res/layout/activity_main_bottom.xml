<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bottom1_near"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom1_near_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bottom1_near_no"
            />

        <TextView
            android:id="@+id/bottom1_near_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="附近"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom2_faxian"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom2_faxian_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bottom2_faxian_no" />

        <TextView
            android:id="@+id/bottom2_faxian_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发现"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom3_xiaoxi"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom3_xiaoxi_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bottom3_xiaoxi_no"/>

        <TextView
            android:id="@+id/bottom3_xiaoxi_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="消息"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom4_guanzhu"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom4_guanzhu_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bottom4_guanzhu_no" />

        <TextView
            android:id="@+id/bottom4_guanzhu_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="关心"
            android:textSize="12sp" />
    </LinearLayout>

